@{
    ViewBag.Title = "Bootstrap Lightbox";
}
<link rel="stylesheet" href="assets/css/bootstrap-lightbox.min.css">
<h2>Bootstrap Lightbox</h2>
<a href="http://www.jasonbutz.info/bootstrap-lightbox">http://www.jasonbutz.info/bootstrap-lightbox</a>
<hr />

<a data-toggle="lightbox" href="#demoLightbox" class="thumbnail">
    <img src="~/Images/small.png" alt="Click to view the lightbox">
</a>
<div id="demoLightbox" class="lightbox hide fade" tabindex="-1" role="dialog" aria-hidden="true">
    <div class='lightbox-content'>
        <img src="~/Images/large.png" />
        <div class="lightbox-caption"><p>Your caption here</p></div>
    </div>
</div>


@Styles.Render("~/Content/bootstraplightbox")
@section Scripts {
    @Scripts.Render("~/bundles/bootstraplightbox")

    <script type="text/javascript">
       // $('#demoLightbox').lightbox()
    </script>
}
        